<Window x:Class="Desktop_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cupboard" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        Background="#1B262C">
    <!-- Use the most dominant color as background -->
    <Grid>
        <!-- Banner with increased height and bottom outline -->
        <Border Background="#0F4C75" Height="120" VerticalAlignment="Top" BorderBrush="Transparent" BorderThickness="0">
            <TextBlock Text="Welcome to Cupboard" Foreground="#BBE1FA" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold"/>
        </Border>

        <!-- Login Button in the bottom third of the screen -->
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,150">
            <Button Name="LoginButton" Content="Login" Width="200" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#3282B8" Foreground="#BBE1FA" FontSize="24" FontWeight="Bold" Click="LoginButton_Click"
                    Padding="10" Margin="0,0,0,20" BorderBrush="Transparent" BorderThickness="0">
                <!-- Rounded corners and shadow for a professional look -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="5" Color="#0F4C75" BlurRadius="10" Opacity="0.6"/>
                </Button.Effect>
            </Button>

            <!-- Below Button Text -->
            <TextBlock Text="Log in to continue" Foreground="#BBE1FA" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
