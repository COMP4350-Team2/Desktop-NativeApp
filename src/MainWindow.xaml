<Window x:Class="Desktop_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cupboard" WindowState="Maximized" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Set Image as Background -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/cupboard.jpg" 
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Banner -->
        <Border Background="#FF426731" Height="80" VerticalAlignment="Top">
            <TextBlock Text="Welcome to Cupboard" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>
        </Border>

        <!-- Login Button -->
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,30">
            <Button Name="LoginButton" Content="Login" Width="150" Height="50"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#FF426731" Foreground="White" FontSize="16"
                    FontWeight="Bold" Click="LoginButton_Click" 
                    BorderBrush="White" BorderThickness="2" Margin="0,0,0,10"/>

            <!-- Below Button Text -->
            <TextBlock Text="Log in to continue" Foreground="#FFFBFBFB"
                       HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
