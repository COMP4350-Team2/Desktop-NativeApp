<Window x:Class="Desktop_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cupboard" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        Background="#99D9EA" BorderBrush="#463018" BorderThickness="8">
    <Grid>
        <!-- Banner with increased height and bottom outline -->
        <Border Background="#9EAD39" Height="120" VerticalAlignment="Top" BorderBrush="#463018" BorderThickness="0,0,0,8">
            <TextBlock Text="Welcome to Cupboard" Foreground="#463018" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold"/>
        </Border>

        <!-- Login Button in the bottom third of the screen -->
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,150">
            <Button Name="LoginButton" Content="Login" Width="200" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#AB4C11"
                    Foreground="White" FontSize="24" FontWeight="Bold" Click="LoginButton_Click" BorderBrush="#463018" BorderThickness="5" Margin="0,0,0,20"/>

            <!-- Below Button Text -->
            <TextBlock Text="Log in to continue" Foreground="#463018" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
