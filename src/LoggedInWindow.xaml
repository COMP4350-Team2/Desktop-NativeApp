<Window x:Class="Desktop_Frontend.LoggedInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoggedInWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        Background="#99D9EA" BorderBrush="#463018" BorderThickness="8">
    <Grid>
        <!-- Banner with increased height and bottom outline -->
        <Border Background="#9EAD39" Height="120" VerticalAlignment="Top" BorderBrush="#463018" BorderThickness="0,0,0,8">
            <TextBlock Text="You are now logged into Cupboard" Foreground="#463018" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold"/>
        </Border>

        <!-- Username TextBox -->
        <TextBox Name="UsernameTextBox" 
                 Background="#9EAD39" 
                 Foreground="#463018" 
                 BorderBrush="#463018" 
                 BorderThickness="5"
                 FontSize="20"
                 IsReadOnly="True" 
                 Margin="20" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center"
                 Width="250" Height="40" TextAlignment="Center"/>

        <!-- Logout Button positioned in the bottom third of the screen -->
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,150">
            <Button Name="LogoutButton" Content="Log out" Width="200" Height="70" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#AB4C11"
                    Foreground="White" FontSize="24" FontWeight="Bold" Click="LogoutButton_Click" BorderBrush="#463018" BorderThickness="5" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Window>
