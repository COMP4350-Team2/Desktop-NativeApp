<Window x:Class="Desktop_Frontend.LoggedInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoggedInWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="You are now logged into Cupboard" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#FF426731"/>
        <Button Name="LogoutButton" Content="Log out" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" 
                Click="LogoutButton_Click" Background="#FF426731" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="White" BorderThickness="2"/>
    </Grid>
</Window>
